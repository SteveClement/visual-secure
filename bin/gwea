#!/usr/bin/env python

import pygtk
pygtk.require('2.0')
import gtk
import subprocess

class WEA:
    def enter_callback(self, widget, entry):
        entry_text = entry.get_text()
        print "Entry contents: %s\n" % entry_text

    def acquire(self, checkbutton, entry):
        print "Acquire %s\n" %entry.get_text()
        p = subprocess.Popen(['./wea',entry.get_text()])

    def entry_toggle_editable(self, checkbutton, entry):
        entry.set_editable(checkbutton.get_active())


    def __init__(self):
        # create a new window
        window = gtk.Window(gtk.WINDOW_TOPLEVEL)
        window.set_size_request(400, 200)
        window.set_title("Web Evidence Acquisition - CIRCL")
        window.connect("delete_event", lambda w,e: gtk.main_quit())

        vbox = gtk.VBox(False, 0)
        window.add(vbox)
        vbox.show()


        entry = gtk.Entry()
        entry.set_max_length(50)
        entry.connect("activate", self.enter_callback, entry)
        entry.set_text("http://www.circl.lu/")
        entry.select_region(0, len(entry.get_text()))
        vbox.pack_start(entry, True, True, 0)
        entry.show()

        hbox = gtk.HBox(False, 0)
        vbox.add(hbox)
        hbox.show()
        check = gtk.CheckButton("Encrypt")
        hbox.pack_start(check, True, True, 0)
        check.connect("toggled", self.entry_toggle_editable, entry)
        check.set_active(True)
        check.show()

        buttonaq = gtk.Button("Acquire Evidence")
        vbox.pack_start(buttonaq, True, True, 0)
        buttonaq.connect("clicked", self.acquire, entry)
        buttonaq.show()

        button = gtk.Button(stock=gtk.STOCK_CLOSE)
        button.connect("clicked", lambda w: gtk.main_quit())
        vbox.pack_start(button, True, True, 0)
        button.set_flags(gtk.CAN_DEFAULT)
        button.grab_default()
        button.show()
        window.show()

def main():
    gtk.main()
    return 0

if __name__ == "__main__":
    WEA()
    main()

